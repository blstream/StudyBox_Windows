<Application
    x:Class="StudyBox.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyBox"
    RequestedTheme="Light"
    xmlns:viewModel="using:StudyBox.ViewModels">

    <Application.Resources>
        <ResourceDictionary>
            <viewModel:ViewModelLocator x:Key="Locator"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Config.xaml" />
                <ResourceDictionary Source="Resources/Themes/Brushes.xaml"/>
                <ResourceDictionary Source="Resources/Themes/Fonts.xaml"/>
                <ResourceDictionary Source="Resources/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
