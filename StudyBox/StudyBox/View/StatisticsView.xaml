<Page
    x:Class="StudyBox.View.StatisticsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyBox.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:StudyBox.Converters"
    xmlns:userControls="using:StudyBox.UserControls"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="50" />
            <RowDefinition x:Name="MainGridRow" Height="2*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Border x:Name="TileManagment" Visibility="Collapsed"/>

        <userControls:MenuControlView Grid.RowSpan="3" Canvas.ZIndex="2"/>

        <Grid Grid.Row="1" Grid.Column="0" Margin="5,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" 
                    Grid.Column="0"
                    Background="{StaticResource DarkBlue}"
                    Margin="0,2"
                    >
                    <TextBlock x:Uid="GoodAnswersCount" 
                               FontFamily="{StaticResource LatoBlackFontFamily}" 
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0"
                               Foreground="{StaticResource Grey}"
                               />
            </Border>
            <Border Grid.Row="0" 
                    Grid.Column="1"
                    Background="{StaticResource Graphite}"
                    Margin="0,2"
                    >
                    <TextBlock  FontFamily="{StaticResource LatoBlackFontFamily}" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource Grey}"
                                />
            </Border>

                <Border Grid.Row="1" 
                    Grid.Column="0"
                    Background="{StaticResource DarkBlue}"
                    Margin="0,2"
                    >
                <TextBlock x:Uid="BadAnswersCount" 
                               FontFamily="{StaticResource LatoBlackFontFamily}" 
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0"
                               Foreground="{StaticResource Grey}"
                               />
            </Border>
            <Border Grid.Row="1" 
                    Grid.Column="1"
                    Background="{StaticResource Graphite}"
                    Margin="0,2"
                    >
                <TextBlock  FontFamily="{StaticResource LatoBlackFontFamily}" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource Grey}"
                                />
            </Border>
            
            
            <Border Grid.Row="2" 
                    Grid.Column="0"
                    Background="{StaticResource DarkBlue}"
                    Margin="0,2"
                    >
                <TextBlock x:Uid="CountOfDecks" 
                               FontFamily="{StaticResource LatoBlackFontFamily}" 
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0"
                               Foreground="{StaticResource Grey}"
                               />
            </Border>
            <Border Grid.Row="2" 
                    Grid.Column="1"
                    Background="{StaticResource Graphite}"
                    Margin="0,2"
                    >
                <TextBlock  FontFamily="{StaticResource LatoBlackFontFamily}" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource Grey}"
                                />
            </Border>
            
            
            <Border Grid.Row="3" 
                    Grid.Column="0"
                    Background="{StaticResource DarkBlue}"
                    Margin="0,2"
                    >
                <TextBlock x:Uid="TestsCount" 
                               FontFamily="{StaticResource LatoBlackFontFamily}" 
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0"
                               Foreground="{StaticResource Grey}"
                               />
            </Border>
            <Border Grid.Row="3" 
                    Grid.Column="1"
                    Background="{StaticResource Graphite}"
                    Margin="0,2"
                    >
                <TextBlock  FontFamily="{StaticResource LatoBlackFontFamily}" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource Grey}"
                                />
            </Border>
            
            
        </Grid>
    </Grid>
</Page>
